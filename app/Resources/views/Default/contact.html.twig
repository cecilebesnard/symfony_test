{%  extends "layout.html.twig" %}

{% block title %}Contact{% endblock %}

{% block ariane %}
    <li class="active">Contact</li>

{% endblock %}

{% block content %}

    {% form_theme formContact _self %}

    {%- block form_errors -%}
        {%- if errors is defined and errors|length > 0 -%}
            <div class="alert alert-success">
                {%- for error in errors -%}
                    <p>{{ error.message }}</p>
                {%- endfor -%}
            </div>
        {%- endif -%}
    {%- endblock form_errors -%}

    {% for flash_message in app.session.flashBag.get('success') %}
        <div class="flash-notice">
            {{ flash_message }}
        </div>
    {% endfor %}

    {{ form_start(formContact, {attr: {novalidate:"novalidate"}}) }}

    <div class="box box-success">
        <div class="box-body">
    <div>
        {# affiche les erreurs du champ firstname #}
        {{ form_errors(formContact.firstname) }}

        {# affiche la balise label du champ firtsname #}
        {{ form_label(formContact.firstname , "Votre pr√©nom", {label_attr: {class: 'labelform'} } )  }}

        {# affiche la balise input de type text du champ firtsname #}
        {{ form_widget(formContact.firstname , {
            attr: {
                class: "form-control"
            }
        }) }}
    </div>

    <div>
        {{ form_errors(formContact.lastname) }}
        {{ form_label(formContact.lastname, "Votre nom", {label_attr: {class: 'labelform'} } ) }}
        {{ form_widget(formContact.lastname , {
            attr: {
                class: "form-control"
            }
        } )}}
    </div>

    <div>
        {{ form_errors(formContact.email) }}
        {{ form_label(formContact.email ,"Votre Mail" ,{label_attr: {class: 'labelform'} } ) }}
        {{ form_widget(formContact.email,
        {
            attr: {
            class: "form-control"
        },
            id: "votre-super-id"
        })
        }}

    </div>

    <div>
        {{ form_errors(formContact.content) }}
        {{ form_label(formContact.content, "Votre message", {label_attr: {class: 'labelform'} }) }}
        {{ form_widget(formContact.content , {
            attr: {
                class: "form-control"
            }
        }) }}
    </div>

    <div class="box-footer">
            <button class="btn btn-info btn-sm">Envoyer</button>
    </div>

    {{ form_end(formContact) }}
        </div>
    </div>
{% endblock %}