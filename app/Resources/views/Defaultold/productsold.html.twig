{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">

        <a href="{{ path('homepage') }}">Page d'accueil</a>
        <div id="container">

        <h2>question 1</h2>
            <ul>
                {% for product in products %}


                    {% if product.id == 4 %}

                        <li>le quatrieme produit est {{ product.description }}</li>
                    {% else %}<li>{{ product.title }} est {{ product.description }}</li>
                    {% endif %}

                {% endfor %}
            </ul>

            {% for product in products %}
                <p>{{ product.title|default('ce champ est inexistant') }}</p>
            {% endfor %}

        <h2>question 2</h2>
            <ul>
                {% for product in products %}

                    <li>

                        {% if loop.first %}
                        Ceci est le premier produit :
                        {% endif %}
                        {{ product.title }}

                    </li>

                {% endfor %}
            </ul>

         <h2>question 3</h2>
           <p>le nombre de produit est : {{ products|length }}</p>

            <p>question 5</p>
            <ul>
            {% for product in products|reverse %}
                {% if product.id == 4 %}

                    <li>le quatrieme produit est {{ product.description }}</li>
                {% else %}<li>{{ product.title }} est {{ product.description }}</li>
                {% endif %}
            {% endfor %}



            </ul>

        <h2>question 6</h2>
            <ul>

                {% for product in products if product.id >1 and product.id <4 %}


                        <li>{{ product.title }} est {{ product.description }}</li>


                {% endfor %}
            </ul>

            {% for product in products %}
                {% if loop.first == false and loop.last == false %}
                    <p>{{ product.title }}</p>
                {% endif %}
            {% endfor %}


            {% for product in products|slice(1, (products|length - 2)) %}
                <p>{{ product.title }}</p>

            {% endfor %}

        <h2>question 7</h2>

            {% set total = 0 %}
            {% for product in products %}

                {% set total = total + product.prix %}

            {% endfor %}

            Le total est : {{ total }}

        <h2>question 8</h2>

            <ul>
                {% for product in products %}


                    {% if product.id == 4 %}

                        <li>le quatrieme produit est {{ product.description }}</li>
                    {% else %}<li>{{ product.title|upper }} est {{ product.description }}</li>
                    {% endif %}

                {% endfor %}
            </ul>

         <h2>question 9</h2>
         <h2>question 10</h2>

            <p>Bonjour {{ firstName ~ " " ~ lastName }}</p>

         <h2>question 12</h2>
            <ul>
                {% for product in products if product.title is not empty %}
                    <li>{{ product.title|upper }} est {{ product.description }}</li>
                {% endfor %}
            </ul>


        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <style>
        body { background: #F5F5F5; font: 18px/1.5 sans-serif; }
        h1, h2 { line-height: 1.2; margin: 0 0 .5em; }
        h1 { font-size: 36px; }
        h2 { font-size: 21px; margin-bottom: 1em; }
        p { margin: 0 0 1em 0; }
        a { color: #0000F0; }
        a:hover { text-decoration: none; }
        code { background: #F5F5F5; max-width: 100px; padding: 2px 6px; word-wrap: break-word; }
        #wrapper { background: #FFF; margin: 1em auto; max-width: 800px; width: 95%; }
        #container { padding: 2em; }
        #welcome, #status { margin-bottom: 2em; }
        #welcome h1 span { display: block; font-size: 75%; }
        #icon-status, #icon-book { float: left; height: 64px; margin-right: 1em; margin-top: -4px; width: 64px; }
        #icon-book { display: none; }

        @media (min-width: 768px) {
            #wrapper { width: 80%; margin: 2em auto; }
            #icon-book { display: inline-block; }
            #status a, #next a { display: block; }

            @-webkit-keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
            @keyframes fade-in { 0% { opacity: 0; } 100% { opacity: 1; } }
            .sf-toolbar { opacity: 0; -webkit-animation: fade-in 1s .2s forwards; animation: fade-in 1s .2s forwards;}
        }
    </style>
{% endblock %}