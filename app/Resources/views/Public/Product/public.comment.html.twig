{% extends "public.layout.html.twig" %}

{% block content %}



    {{ form_start(formComment, {attr: {novalidate:"novalidate"}}) }}
    {{ form_errors(formComment) }}

    <div class="box box-success">
        <div class="box-body">

            <div>

                {{ form_errors(formComment.author) }}


                {{ form_label(formComment.author , "Auteur", {label_attr: {class: 'labelform'} } )  }}


                {{ form_widget(formComment.author , {
                    attr: {
                        class: "form-control"
                    }
                }) }}
            </div>

            <div>

                {{ form_errors(formComment.content) }}


                {{ form_label(formComment.content , "Commentaire",       {label_attr: {class: 'labelform'} } )  }}


                {{ form_widget(formComment.content , {
                    attr: {
                        class: "form-control"
                    }
                }) }}
            </div>

            <div>

                {{ form_errors(formComment.score) }}


                {{ form_label(formComment.score , "Score",       {label_attr: {class: 'labelform'} } )  }}


                {{ form_widget(formComment.score , {
                    attr: {
                        class: "form-control"
                    }
                }) }}
            </div>




            <div class="box-footer">
                <button class="btn btn-info btn-sm">Envoyer</button>
            </div>

            {{ form_end(formComment) }}
        </div>
    </div>





{% endblock %}